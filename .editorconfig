# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[{Makefile,GNUmakefile*}]
indent_style = tab

[{*.nix,*.yml}]
indent_size = 2
